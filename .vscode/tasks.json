{
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "dev build",
            "command": "cmd",
            "isShellCommand": true,
            "args": [
                "/C",
                "dotnet",
                "build",
                "${workspaceRoot}/src/server/server.csproj"
            ],
            "isBuildCommand": false,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "command": "cmd",
            "isShellCommand": true,
            "args": [
                "/C",
                "dotnet",
                "test",
                "${workspaceRoot}/test/test-common/test-common.csproj"
            ],
            "isTestCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "prod build",
            "command": "powershell",
            "isShellCommand": true,
            "echoCommand": true,
            "args": [
                "./production.ps1"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "isTestCommand": false
        },
        {
            "taskName": "dev build ui",
            "command": "webpack",
            "isShellCommand": true,
            "args": [
                "-p",
                "--config",
                "webpack.config.js"
            ],
            "showOutput": "always",
            "options": {
                "cwd": "${workspaceRoot}/src/ui"
            },
            "isBuildCommand": true
        }
    ]
}